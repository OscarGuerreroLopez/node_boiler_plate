{
  "name": "node_typescript_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/src",
    "start:dev": "rm -rf node_modules && rm -rf package-lock.json && npm install & npm run start:tsnode",
    "build": "rimraf dist && tsc --build tsconfig.json",
    "start:tsnode": "npm run lint:fix && npm run test && npm audit && ts-node-dev --respawn src/index.ts",
    "start:nodemon": "nodemon --exec ts-node src/index.ts",
    "test": "jest --detectOpenHandles --testTimeout=10000 --forceExit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OscarGuerreroLopez/node_boiler_plate"
  },
  "engines": {
    "node": ">=1.0.0"
  },
  "keywords": [],
  "author": "oscarlopez75 <oscar.computer.guy@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "auth-ogl": "^0.1.7",
    "cors": "^2.8.5",
    "elastic-apm-node": "^3.14.0",
    "envalid": "^6.0.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^4.6.0",
    "rate-limiter-flexible": "^2.1.4",
    "redis": "^3.0.2",
    "request-ip": "^2.1.3",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^8.8.2",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3",
    "uuid": "^3.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/redis": "^2.8.18",
    "@types/request-ip": "0.0.35",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
